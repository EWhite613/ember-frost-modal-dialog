{{#ember-remodal
  forService=true
  closeOnOutsideClick=false
  onOpen=(action 'modalOpen')
  onClose=(action 'modalClose')
  closeOnEscape=false
  disableNativeClose=true as |modal|
}}
  {{yield}}
  {{#modal.open}}
    {{#yield-slot 'openModalElement'}}
      {{yield}}
    {{/yield-slot}}
  {{/modal.open}}

  {{#yield-slot 'header'}}
    {{yield}}
  {{else}}
    <div class="header">
      {{title}}
    </div>
  {{/yield-slot}}

  {{#yield-slot 'body'}}
    <div class="body">
      {{frost-icon
        icon=dialogIcon
        class='icon'}}
      {{#if messageTemplate}}
        {{partial messageTemplate}}
      {{else}}
        <span>{{message}}</span>
      {{/if}}
    </div>
  {{/yield-slot}}

    <div class="footer">
      {{#if confirmAlias}}
        {{#modal.cancel}}
          {{frost-button
            autofocus=true
            size="medium"
            priority="tertiary"
            text=cancelAlias
          }}
        {{#modal.cancel}}
        {{#modal.confirm}}
          {{frost-button
            size="medium"
            priority="primary"
            text=confirmAlias}}
        {{/modal.confirm}}
      {{else}}
        {{#modal.cancel}}
          {{frost-button
            autofocus=true
            size="medium"
            priority="primary"
            text=cancelAlias}}
        {{#modal.cancel}}
      {{/if}}
    </div>
{{/ember-remodal}}
